<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_app_color"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="1900dp">

    <ImageView
        android:elevation="10dp"
        android:id="@+id/ivProfileIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/profile_icon"
        android:layout_marginStart="24dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:elevation="10dp"
        android:id="@+id/ivNotificationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/back_for_add_shadow_icon"
        android:src="@drawable/notifications_icon"
        app:layout_constraintStart_toEndOf="@id/ivProfileIcon"
        app:layout_constraintTop_toTopOf="parent"/>
        
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="83dp"
        android:layout_height="132dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfileIcon"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mountain_background1"/>

    </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>